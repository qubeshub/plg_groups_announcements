					<option value="members">PLG_GROUPS_ANNOUNCEMENTS_PARAM_ACCESS_MEMBERS</option>
					<option value="nobody">PLG_GROUPS_ANNOUNCEMENTS_PARAM_ACCESS_NOBODY</option>
				</field>
				<field type="spacer" />
				<field name="display_limit" type="text" size="3" default="50" label="PLG_GROUPS_ANNOUNCEMENTS_PARAM_LIMIT_LABEL" description="PLG_GROUPS_ANNOUNCEMENTS_PARAM_LIMIT_DESC" />
